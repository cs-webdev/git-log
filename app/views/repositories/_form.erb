<% if flash[:notice] %>
  <p class="bg-danger"><%= flash[:notice] %></p>
<% end %>

<%= form_for @repo, html: {role: "form"}  do |form| %>

  <div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :working_dir %>
  <%= form.text_field :working_dir, class: "form-control"  %>
  </div>

  <%= form.submit nil, class: "btn btn-default"%>
<% end %>
<%= link_to "Go Back", root_path, class: "btn btn-default" %>
